pkgname=everpad
pkgver=1.11.1
pkgrel=100
pkgdesc="Evernote client with Unity integration"
arch=('any')
url="https://github.com/nvbn/everpad/"
license=('GPL')
groups=('unity-extra')
depends=('python2' 'python2-beautifulsoup3' 'python2-dbus' 'python2-distribute' 'python2-keyring' 'python2-magic' 'python2-oauth2' 'python2-pyside' 'python2-sqlalchemy' 'python2-unity-singlet' 'python-gnomekeyring' 'python-pysqlite' 'python-webpy' 'sni-qt')
source=("https://launchpad.net/~nvbn-rm/+archive/ppa/+files/everpad_${pkgver}.orig.tar.xz")
sha512sums=('f637ca1bd292e0daa62625aeab1706541672576efe0e82afdbd0fa88d6f185234737faa87a570fc826d21beb2f52534f98e5be8eb7e591259118606f63549171')

package() {
  cd "${srcdir}/everpad"

  python2 setup.py install --root="${pkgdir}/" --optimize=1
}

